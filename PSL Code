include "colors.pin"





function Letter2 do

setPapersize 11,8.5
setbackground Grey





% Position and 2nd Page Image
gPosition 4.4,0
image getCurrentDirectory&"\\resources\\"&"MN.jpg",0.4






gPosition 0,0
image getCurrentDirectory&"\\resources\\"&"CV.png",0.54

gPosition 0,3.7
setOpacity 0.5

image getCurrentDirectory&"\\resources\\"&"city.jpg",0.8
setOpacity 1



setFont "helvetica-bold",25
setColor White
Tposition 1.5,3.9
Print "One Card,"


setFont "helvetica-bold",25
setColor Pink
Tposition 1.6,4.28
Print "Endless Possibilities!"



setFont "helvetica-bold",12
setColor Black
Tposition 1.55,6.2
Print "3X" & " Points on Airfare"



setFont "helvetica-bold",12
setColor Black
Tposition 1.55,6.4
Print "2X" & " Points on Gas "



setFont "helvetica-bold",11.5
setColor Black
Tposition 1.55,6.6
Print "1X " & "All Other Purchases"




setFont "helvetica-bold",11
setColor White
Tposition 8.0,8
Print "Start Booming Today"




setFont "helvetica-bold",11
setColor White
Tposition 7.5, 4.45
Print merge["Last"] & ", " &  merge["first"]



setFont "helvetica-bold",11
setColor White
Tposition 8.0,4.8
Print merge["Address"] & " " &  merge["City"]


setFont "helvetica-bold",11
setColor White
Tposition 8.5,5
Print merge["St"] & " " &  merge["Zip"]
setFont "helvetica-bold",11
setColor White

end


}
