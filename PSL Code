{
 if input["version"] = "C"
Card

else
Letter2

function Card do



% Paper size and background
setPaperOrientation Landscape
setbackground cBlack
setfont "helvetica", 20
gPosition 1,1


setbackground cWhite
setFont "times-roman", 20
gPosition 1,1


%Images
gPosition 1.5,3.8
image getCurrentDirectory&"\\resources\\"&"Key.png",0.2



gPosition 0,0
image getCurrentDirectory&"\\resources\\"&"dark.jpg",0.58
gPosition 10.2,0.5
image getCurrentDirectory&"\\resources\\"&"Diamond.png",0.32

gPosition 1.5,3.8
image getCurrentDirectory&"\\resources\\"&"Key.png",0.4


 % Bottom Right text
TPosition 8.2,0.6
setFont "times-roman", 25
setColor cWhite
print "Legacy Bank"

% Credit Card Color
TPosition 2.8,5
SetSpacePad 3
setFont "times-roman", 35
setColor cWhite

% Credit Card #



for i = 1 to 10 do
print integerPartOf 11.5* random
print " "
end


% Valid thru



TPosition 5.5,6
setFont "times-roman", 10
setColor cWhite
print "Valid" & newline
TPosition 5.5,6.2
print "Thru" & newline
TPosition 6.0,6.
print "01/20"




TPosition 1.6,6.9
setFont "times-roman", 20
setColor cWhite
Print merge["Last"] & " , " &  merge["First"]






% Bottom right Text

TPosition 9.5,8
setFont "times-roman", 10
setColor cWhite
print "Legacy Black Card"

% Function for image files

end





% Setting new page for Booklet
